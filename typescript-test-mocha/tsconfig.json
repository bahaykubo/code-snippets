{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@types/mocha"],
    "paths": {
      "@config/*": ["./config/*"],
      "@constant/*": ["./constants/*"],
      "@service/*": ["./services/*"]
    }
  },
  "exclude": ["node_modules", "./.github", "./.vscode", "./artifacts", "./dist"]
}
