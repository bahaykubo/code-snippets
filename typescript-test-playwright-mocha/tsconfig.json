{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": ["node", "playwright", "@types/mocha"],
    "paths": {
      "@config/*": ["./config/*"],
      "@constant/*": ["./constants/*"],
      "@page/*": ["./pages/*"],
      "@service/*": ["./services/*"],
      "@type/*": ["./types/*"]
    }
  }
}
