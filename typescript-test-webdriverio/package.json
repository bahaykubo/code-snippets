{
  "name": "test-wdio-mocha-ts",
  "version": "1.0.0",
  "description": "testing with webdriverio and mocha in typescript",
  "scripts": {
    "ci": "rm -rf node_modules && yarn install --frozen-lockfile",
    "lint": "eslint . && yarn prettier --check .",
    "lint-fix": "eslint . --fix && yarn prettier --write . && yarn lint",
    "test-ui": "wdio run ./wdio.config.ts",
    "test-ui-headless": "HEADLESS=true wdio run ./wdio.config.ts",
    "test-api": "mocha tests/api"
  },
  "author": "noel sevilla",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/webdriverio": "^4.8.1",
    "@types/chai": "^4.3.10",
    "@types/node": "^20.9.0",
    "@wdio/cli": "^8.22.1",
    "@wdio/junit-reporter": "^8.21.0",
    "@wdio/local-runner": "^8.22.1",
    "@wdio/mocha-framework": "^8.22.0",
    "@wdio/spec-reporter": "^8.21.0",
    "axe-html-reporter": "^2.2.3",
    "axios": "^1.6.1",
    "chai": "^4.3.10",
    "chromedriver": "119.0.1",
    "dotenv": "^16.3.1",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-wdio": "^8.20.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "style-lint-js": "^1.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.2.2",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-timeline-reporter": "^5.1.4"
  }
}
